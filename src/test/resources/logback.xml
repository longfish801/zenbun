<configuration>

<appender name="FILE" class="ch.qos.logback.core.FileAppender">
	<file>build/app.log</file>
	<encoder>
		<charset>UTF-8</charset>
		<pattern>%d{yyyy/MM/dd HH:mm:ss.SSS} %-5level %msg \(%thread - %file,%class#%method,%line\)%n</pattern>
	</encoder>
</appender>

<root>
	<level value="DEBUG" />
	<appender-ref ref="FILE" />
</root>

</configuration>
